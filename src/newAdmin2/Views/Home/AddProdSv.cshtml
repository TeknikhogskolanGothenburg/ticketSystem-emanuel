
@{
    ViewData["Title"] = "Contact";
}

<h1>
    Lägg till produkt
</h1>



@using (Html.BeginForm("AddProd", "Home"))
{
    <fieldset>
        <legend>Ett produktId kommer att bli genererat </legend> <br />


        <label for="ProdName">Produktnamn</label><br />
